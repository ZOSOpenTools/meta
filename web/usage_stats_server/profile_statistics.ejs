<!-- profile_statistics.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= serverName %> Profile Statistics</title>
  <!-- Include Bootstrap CSS from CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <div class="container mt-5">
		  <a href="/">HOME</a>
    <h1>Profile Statistics</h1>

    <!-- Profile Information -->
    <h2 class="mt-4">Profile Information</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">UUID</th>
          <th scope="col">Is Bot</th>
          <th scope="col">Is IBM</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= data.profile.uuid %></td>
          <td><%= data.profile.isbot %></td>
          <td><%= data.profile.isibm %></td>
        </tr>
      </tbody>
    </table>

    <!-- Install Statistics -->
    <h2 class="mt-4">Install Statistics</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Package Name</th>
          <th scope="col">Version</th>
          <th scope="col">Is Upgrade</th>
          <th scope="col">Is Build Install</th>
          <th scope="col">Is Runtime Dependency Install</th>
          <th scope="col">Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% data.installs.forEach(install => { %>
          <tr>
		<td><%= install.packagename %></td>
		<td><%= install.version %></td>
		<td><%= install.isUpgrade ? 'true' : 'false' %></td>
		<td><%= install.isBuildInstall ? 'true' : 'false' %></td>
		<td><%= install.isRuntimeDependencyInstall ? 'true' : 'false' %></td>
		<td><%= new Date(install.timestamp * 1000).toLocaleString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Include Bootstrap JavaScript from CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

